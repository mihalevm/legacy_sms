<?xml version='1.0' encoding='utf-8'?>
<widget id="com.legacy.smssender" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>СМС Рассылка</name>
    <description>
        Рассылка СМС сообщений
    </description>
    <author email="_lamo_@mail.ru" href="http://legacy.dtelecom.ru">
        MSoft
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="com.jsmobile.plugins.sms" spec="https://github.com/hazems/cordova-sms-plugin.git" />
    <plugin name="cordova-plugin-advanced-http" spec="2.1.1">
        <variable name="OKHTTP_VERSION" value="3.10.0" />
    </plugin>
    <engine name="android" spec="7.1.4" />
</widget>
